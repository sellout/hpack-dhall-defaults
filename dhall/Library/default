let H = (../dependencies.dhall).hall

let Pvp = H.PVP

let language = H.GHC.LanguageEdition

let hpack = H.hpack

let Common = ../Common/package.dhall

in  λ(a : Type) →
    λ(minimumGhcVersion : Pvp.Version) →
      ( hpack.Library.schema a
      )::(   Common.languageCompatibleWith a language.GHC2024 minimumGhcVersion
           ⫽ { -- By not “exposing” libraries, we force consumers to use
               -- `PackageImports`, which means adding modules isn’t a breaking
               -- change.
               exposed = False
             }
         )
